{
  "name": "hathor-ai-guardian",
  "version": "1.0.0",
  "description": "Advanced AI-Powered Fraud Detection System for Blockchain Networks",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:ai\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev:ai": "cd ai-engine && python -m uvicorn api.fraud_api:app --reload --port 8001",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:ai": "cd ai-engine && python -m uvicorn api.fraud_api:app --host 0.0.0.0 --port 8001",
    "test": "npm run test:backend && npm run test:frontend && npm run test:ai && npm run test:contracts",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:ai": "cd ai-engine && python -m pytest tests/",
    "test:contracts": "cd contracts && npm test",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../contracts && npm install && cd ../ai-engine && pip install -r requirements.txt",
    "deploy:contracts": "cd contracts && npm run deploy",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "blockchain",
    "fraud-detection",
    "ai",
    "machine-learning",
    "hathor",
    "ethereum",
    "security"
  ],
  "author": "HATHOR AI Guardian Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hathor-ai-guardian.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/hathor-ai-guardian/issues"
  },
  "homepage": "https://github.com/yourusername/hathor-ai-guardian#readme",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}